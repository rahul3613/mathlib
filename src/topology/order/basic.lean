instance tendsto_Icc_class_nhds_pi {ι : Type*} {α : ι → Type*}
  [Π i, preorder (α i)] [Π i, topological_space (α i)] [∀ i, order_topology (α i)]
  (f : Π i, α i) :
  tendsto_Ixx_class Icc (𝓝 f) (𝓝 f) :=
begin

      end, },
    naturality' := Œª P Q f, by simpa only [hom_ext] using (p_comm f).symm, },
  inv :=
  { app := Œª P,
    { f :=
      { f := P.p.1,
        comm := begin
          have h := P.idem,
          simp only [hom_ext, comp_f] at h,
